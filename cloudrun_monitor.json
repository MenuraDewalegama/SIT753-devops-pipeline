{
  "name": "Cloud Run Error Monitor",
  "type": "metric alert",
  "query": "avg(last_5m):avg:cloud.run.error_count{service:jukebox-service,region:us-central1} > 0",
  "message": "Errors detected on jukebox-service in GCP. Immediate attention required.",
  "tags": ["env:prod", "service:jukebox", "source:jenkins"],
  "options": {
    "thresholds": {
      "critical": 0
    },
    "notify_audit": false,
    "locked": false,
    "timeout_h": 0,
    "include_tags": true,
    "require_full_window": true,
    "new_host_delay": 300,
    "notify_no_data": false
  }
}
